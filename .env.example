# ========================================
# QC Paint Shop Business Manager
# Environment Configuration
# ========================================

# Server
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# Database (MySQL)
DB_HOST=localhost
DB_USER=qc_admin
DB_PASSWORD=your_db_password
DB_NAME=qc_business_manager

# SMTP Email (optional - for sending estimates/notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
MAIL_FROM_NAME=Quality Colours
MAIL_FROM=noreply@qcpaintshop.com

# SMS Gateway - Nettyfish (optional - for OTP)
SMS_USER=your_sms_username
SMS_PASSWORD=your_sms_password
SMS_SENDER_ID=QUALTQ
