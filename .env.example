# ========================================
# QC Paint Shop Business Manager
# Environment Configuration Template
# ========================================
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env
#
# NEVER commit the .env file to version control!
# ========================================

# ----------------------------------------
# Server Configuration
# ----------------------------------------
# Port the Express server listens on
PORT=3000

# Environment: development | production
# In development: OTP codes are returned in API responses for testing
# In production: error details are hidden from API responses
NODE_ENV=development

# CORS allowed origins (NEVER use * in production!)
# Development: http://localhost:3000
# Production:  https://act.qcpaintshop.com
# Multiple:    https://act.qcpaintshop.com,https://qcpaintshop.com
# If not set:  development defaults to localhost:3000
#              production defaults to https://act.qcpaintshop.com (with console warning)
CORS_ORIGIN=http://localhost:3000

# ----------------------------------------
# Database (MySQL)
# ----------------------------------------
# MySQL connection settings
DB_HOST=localhost
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=qc_business_manager

# ----------------------------------------
# SMTP Email Configuration
# ----------------------------------------
# Used for: password reset emails, notifications
# For Gmail: enable "App Passwords" in Google Account settings
# Leave SMTP_HOST empty to disable email functionality
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
MAIL_FROM_NAME=Quality Colours
MAIL_FROM=noreply@qcpaintshop.com

# ----------------------------------------
# SMS Gateway - Nettyfish
# ----------------------------------------
# Used for: OTP verification during registration/login
# Provider: https://retailsms.nettyfish.com
# Leave SMS_USER empty to disable SMS functionality
SMS_USER=your_sms_username
SMS_PASSWORD=your_sms_password
SMS_SENDER_ID=QUALTQ

# ----------------------------------------
# Upload Configuration
# ----------------------------------------
# Base directory for file uploads (relative to project root)
UPLOAD_DIR=public/uploads
# Maximum upload file size in MB
MAX_FILE_SIZE_MB=2
