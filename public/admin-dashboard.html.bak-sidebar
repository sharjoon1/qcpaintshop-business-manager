    <script>
        // Mobile menu toggle
        const sidebar = document.getElementById('sidebar');
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        
        mobileMenuBtn.addEventListener('click', () => {
            sidebar.classList.toggle('-translate-x-full');
        });

        // Close sidebar when clicking outside (mobile only)
        document.addEventListener('click', (e) => {
            if (window.innerWidth < 1024) { // lg breakpoint
                // Don't close if clicking on a link inside sidebar
                if (e.target.tagName === 'A' || e.target.closest('a')) {
                    return; // Let the link work
                }
                if (!sidebar.contains(e.target) && !mobileMenuBtn.contains(e.target)) {
                    sidebar.classList.add('-translate-x-full');
                }
            }
        });

        // Load dashboard stats
        async function loadStats() {
            try {
                const token = localStorage.getItem('auth_token');
                const headers = {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                };

                // Load estimates
                const estimatesRes = await fetch('/api/estimates', { headers });
                const estimates = await estimatesRes.json();
                document.getElementById('totalEstimates').textContent = Array.isArray(estimates) ? estimates.length : 0;

                // Load products
                const productsRes = await fetch('/api/products', { headers });
                const products = await productsRes.json();
                document.getElementById('totalProducts').textContent = Array.isArray(products) ? products.length : 0;

                // Load brands
                const brandsRes = await fetch('/api/brands', { headers });
                const brands = await brandsRes.json();
                document.getElementById('totalBrands').textContent = Array.isArray(brands) ? brands.length : 0;

                // Load categories
                const categoriesRes = await fetch('/api/categories', { headers });
                const categories = await categoriesRes.json();
                document.getElementById('totalCategories').textContent = Array.isArray(categories) ? categories.length : 0;

                console.log('‚úÖ Stats loaded:', { estimates: estimates.length, products: products.length, brands: brands.length, categories: categories.length });
                
                // Update recent activity
                loadRecentActivity(estimates);
            } catch (error) {
                console.error('‚ùå Error loading stats:', error);
            }
        }

        // Load recent activity
        function loadRecentActivity(estimates) {
            const activityDiv = document.getElementById('recentActivity');
            if (!Array.isArray(estimates) || estimates.length === 0) {
                activityDiv.innerHTML = '<p class="text-gray-500">No recent activity</p>';
                return;
            }

            // Get the 5 most recent estimates
            const recentEstimates = estimates
                .sort((a, b) => new Date(b.created_at) - new Date(a.created_at))
                .slice(0, 5);

            activityDiv.innerHTML = recentEstimates.map(est => {
                const date = new Date(est.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                const status = est.status || 'draft';
                const statusColor = status === 'approved' ? 'text-green-600' : status === 'rejected' ? 'text-red-600' : 'text-blue-600';
                return `
                    <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
                        <div class="flex-1">
                            <p class="font-semibold text-gray-800">${est.estimate_number || 'N/A'}</p>
                            <p class="text-xs text-gray-500">${est.customer_name || 'Unknown Customer'} ‚Ä¢ ${date}</p>
                        </div>
                        <span class="${statusColor} text-xs font-semibold uppercase">${status}</span>
                    </div>
                `;
            }).join('');
        }

        // Logout function
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                localStorage.removeItem('auth_token');
                localStorage.removeItem('user');
                window.location.href = 'login.html';
            }
        }

        // Check authentication
        if (!localStorage.getItem('auth_token')) {
            window.location.href = '/business-manager/login.html';
        }

        // Profile dropdown toggle
        // Profile functions now handled by unified header component
        
        // Initialize
        loadStats();
    </script>
