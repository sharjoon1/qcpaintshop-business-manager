<script>
function toggleMobileNav() { document.getElementById('mobileNav').classList.toggle('open'); document.getElementById('navOverlay').classList.toggle('show'); document.getElementById('hamburgerBtn').classList.toggle('active'); }
function closeMobileNav() { document.getElementById('mobileNav').classList.remove('open'); document.getElementById('navOverlay').classList.remove('show'); document.getElementById('hamburgerBtn').classList.remove('active'); }
function toggleProfileDropdown() { document.getElementById('profileDropdown').classList.toggle('show'); }
document.addEventListener('click', function(e) { const profile = document.querySelector('.qc-profile-section'); if (!profile.contains(e.target)) document.getElementById('profileDropdown').classList.remove('show'); });
function headerLogout() { if (confirm('Are you sure you want to logout?')) { localStorage.removeItem('auth_token'); localStorage.removeItem('user'); window.location.href = '/business-manager/login.html'; } }

async function loadHeaderInfo() {
    const user = JSON.parse(localStorage.getItem('user') || '{}');
    
    // Set profile picture or initial
    if (user.profile_image_url) {
        const pic = document.getElementById('headerProfilePic');
        const initial = document.getElementById('headerProfileInitial');
        pic.src = user.profile_image_url;
        pic.style.display = 'block';
        if (initial) initial.style.display = 'none';
    } else if (user.full_name || user.name) {
        const name = user.full_name || user.name;
        const initial = document.getElementById('headerProfileInitial');
        if (initial) initial.textContent = name.charAt(0).toUpperCase();
    }
}

function highlightActivePage() {
    const path = window.location.pathname;
    document.querySelectorAll('.qc-nav-link, .qc-nav-mobile-link').forEach(link => {
        if (path.includes(link.getAttribute('data-page') || link.href)) link.classList.add('active');
    });
}

loadHeaderInfo();
// Add this to estimates.html after the loadHeaderInfo function

let estimates = [];
let filteredEstimates = [];

async function loadEstimates() {
    try {
        const response = await fetch('/business-manager/api/estimates', { 
            headers: getAuthHeaders() 
        });
        
        if (!response.ok) {
            throw new Error(`HTTP ${response.status}`);
        }
        
        estimates = await response.json();
        filteredEstimates = estimates;
        
        renderEstimates();
        updateStatusCounts();
        
        console.log('‚úÖ Loaded', estimates.length, 'estimates');
    } catch (error) {
        console.error('‚ùå Error loading estimates:', error);
        alert('Failed to load estimates: ' + error.message);
    }
}

function renderEstimates() {
    const tbody = document.getElementById('desktopTableBody');
    const mobileContainer = document.getElementById('mobileCards');
    
    if (!tbody || !mobileContainer) return;
    
    if (filteredEstimates.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" class="text-center py-8 text-gray-500">No estimates found</td></tr>';
        mobileContainer.innerHTML = '<div class="text-center py-8 text-gray-500">No estimates found</div>';
        return;
    }
    
    // Desktop table
    tbody.innerHTML = filteredEstimates.map(est => `
        <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">#${est.id}</td>
            <td class="px-6 py-4">${est.customer_name || 'Unknown'}</td>
            <td class="px-6 py-4">‚Çπ${parseFloat(est.grand_total || 0).toLocaleString('en-IN')}</td>
            <td class="px-6 py-4">
                <span class="px-2 py-1 text-xs rounded-full ${getStatusClass(est.status)}">
                    ${est.status || 'draft'}
                </span>
            </td>
            <td class="px-6 py-4">${new Date(est.estimate_date).toLocaleDateString('en-IN')}</td>
            <td class="px-6 py-4">
                <button onclick="viewEstimate(${est.id})" class="text-blue-600 hover:underline">View</button>
            </td>
        </tr>
    `).join('');
    
    // Mobile cards
    mobileContainer.innerHTML = filteredEstimates.map(est => `
        <div class="bg-white rounded-lg shadow p-4">
            <div class="flex justify-between items-start mb-2">
                <span class="font-semibold">#${est.id}</span>
                <span class="px-2 py-1 text-xs rounded-full ${getStatusClass(est.status)}">
                    ${est.status || 'draft'}
                </span>
            </div>
            <div class="text-sm text-gray-600 mb-2">${est.customer_name || 'Unknown'}</div>
            <div class="flex justify-between items-center">
                <span class="font-bold text-purple-600">‚Çπ${parseFloat(est.grand_total || 0).toLocaleString('en-IN')}</span>
                <button onclick="viewEstimate(${est.id})" class="text-blue-600 text-sm">View</button>
            </div>
        </div>
    `).join('');
}

function getStatusClass(status) {
    const classes = {
        'draft': 'bg-gray-200 text-gray-700',
        'sent': 'bg-blue-200 text-blue-700',
        'approved': 'bg-green-200 text-green-700',
        'rejected': 'bg-red-200 text-red-700',
        'pending_approval': 'bg-yellow-200 text-yellow-700'
    };
    return classes[status] || 'bg-gray-200 text-gray-700';
}

function updateStatusCounts() {
    const counts = {
        all: estimates.length,
        draft: 0,
        sent: 0,
        pending_approval: 0,
        approved: 0,
        rejected: 0,
        converted: 0,
        expired: 0
    };
    
    estimates.forEach(est => {
        if (counts[est.status] !== undefined) {
            counts[est.status]++;
        }
    });
    
    Object.keys(counts).forEach(status => {
        const el = document.getElementById(`count-${status}`);
        if (el) el.textContent = counts[status];
    });
}

function filterByStatus(status) {
    if (status === 'all') {
        filteredEstimates = estimates;
    } else {
        filteredEstimates = estimates.filter(e => e.status === status);
    }
    
    // Update active filter button
    document.querySelectorAll('.status-filter').forEach(btn => {
        btn.classList.remove('active');
    });
    document.querySelector(`[data-status="${status}"]`)?.classList.add('active');
    
    renderEstimates();
}

function viewEstimate(id) {
    window.location.href = `/business-manager/estimate-view.html?id=${id}`;
}

function createNewEstimate() {
    window.location.href = '/business-manager/estimate-create-new.html';
}

// Call on page load
loadEstimates();
highlightActivePage();
</script>



