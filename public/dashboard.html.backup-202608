    <script>
        // Wait for navigation to load
        document.addEventListener('navigationLoaded', initDashboard);
        
        // Fallback: init after delay if event doesn't fire
        setTimeout(initDashboard, 1000);
        
        let dashboardInitialized = false;
        
        function initDashboard() {
            if (dashboardInitialized) return;
            dashboardInitialized = true;
            
            console.log('üéØ Initializing dashboard...');
            loadDashboardData();
        }
        
        // Load Dashboard Data
        async function loadDashboardData() {
            try {
                const headers = window.getAuthHeaders ? window.getAuthHeaders() : {
                    'Authorization': `Bearer ${localStorage.getItem('auth_token')}`,
                    'Content-Type': 'application/json'
                };
                
                // Load estimates
                try {
                    const estimatesRes = await fetch('/business-manager/api/estimates', { headers });
                    if (estimatesRes.ok) {
                        const estimates = await estimatesRes.json();
                        document.getElementById('totalEstimates').textContent = estimates.length || 0;
                        displayRecentEstimates(estimates.slice(0, 5));
                    }
                } catch (e) {
                    console.error('Error loading estimates:', e);
                }
                
                // Load products
                try {
                    const productsRes = await fetch('/business-manager/api/products', { headers });
                    if (productsRes.ok) {
                        const products = await productsRes.json();
                        document.getElementById('totalProducts').textContent = products.length || 0;
                    }
                } catch (e) {
                    console.error('Error loading products:', e);
                }
                
                // Load customers
                try {
                    const customersRes = await fetch('/business-manager/api/customers', { headers });
                    if (customersRes.ok) {
                        const customers = await customersRes.json();
                        document.getElementById('totalCustomers').textContent = customers.length || 0;
                    }
                } catch (e) {
                    console.error('Error loading customers:', e);
                }
                
                console.log('‚úÖ Dashboard data loaded');
                
            } catch (error) {
                console.error('‚ùå Error loading dashboard data:', error);
            }
        }
        
        function displayRecentEstimates(estimates) {
            const container = document.getElementById('recentEstimates');
            
            if (!estimates || estimates.length === 0) {
                container.innerHTML = '<p class="text-center text-gray-500 py-8">No estimates yet. Create your first estimate!</p>';
                return;
            }
            
            container.innerHTML = estimates.map(est => `
                <div class="activity-item flex items-center justify-between">
                    <div class="flex-1">
                        <div class="font-semibold text-gray-900 text-lg">${est.customer_name || 'Unknown Customer'}</div>
                        <div class="text-sm text-gray-600 mt-1">Estimate #${est.estimate_number || est.id}</div>
                    </div>
                    <div class="text-right">
                        <div class="text-xl font-bold text-gray-900">‚Çπ${est.total_amount || '0.00'}</div>
                        <span class="inline-block mt-1 px-3 py-1 text-xs font-semibold rounded-full ${
                            est.status === 'approved' ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700'
                        }">
                            ${est.status || 'pending'}
                        </span>
                    </div>
                </div>
            `).join('');
        }
    </script>
